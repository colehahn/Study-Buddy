                     <TextArea fx:id="assignmentDescription" prefHeight="125.0" prefWidth="436.0" />
                     <Button fx:id="addAssignmentButton" mnemonicParsing="false" onAction="#addAssignment" text="Add" />
                  </children>
               </VBox>
            </right>
         </BorderPane>
      </children></AnchorPane>
