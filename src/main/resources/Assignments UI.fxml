<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" prefHeight="560.0" prefWidth="1000.0" style="-fx-background-color: rgb(238, 238, 238);" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.studybuddy.AssignmentsPageController">
   <center>
      <BorderPane prefHeight="560.0" prefWidth="300.0" BorderPane.alignment="CENTER_LEFT">
         <top>
            <Label text="Assignments" BorderPane.alignment="CENTER">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
         </top>
         <center>
            <ScrollPane fitToWidth="true" focusTraversable="false" hbarPolicy="NEVER" stylesheets="@stylesheet.css" BorderPane.alignment="CENTER">
               <content>
                  <VBox fx:id="assignmentsList" alignment="CENTER" prefWidth="278.0" spacing="20.0" />
               </content>
            </ScrollPane>
         </center>
         <bottom>
            <Button fx:id="addAssignmentUIButton" mnemonicParsing="false" onAction="#addAssignmentUI" prefHeight="50.0" prefWidth="297.0" style="-fx-background-color: rgb(123, 167, 216);" text="Add Assignment" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
   </center>
</BorderPane>
